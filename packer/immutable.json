{
    "variables": {
        "source_image_family": null,
        "project_id": null,
        "app_owner": "bossit",
        "machine_type": "g1-small",
        "image_description": "Full VM for reddit application",
        "disk_size": "10",
        "disk_type": "pd-standard",
        "network": "default",
        "tags": "puma,ruby,mongo,packer,fullvm",
        "zone": "europe-west1-b"
    },
    "builders": [
        {
            "type": "googlecompute",
            "project_id": "infra-{{user `project_id`}}",
            "image_name": "reddit-full",
            "image_family": "reddit-full",
            "source_image_family": "{{user `source_image_family`}}",
            "zone": "{{user `zone`}}",
            "ssh_username": "{{user `app_owner`}}",
            "machine_type": "{{user `machine_type`}}",
            "image_description": "{{user `image_description`}}",
            "disk_size": "{{user `disk_size`}}",
            "disk_type": "{{user `disk_type`}}",
            "network": "{{user `network`}}",
            "tags": "{{user `tags`}}"
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "files/redditd.service",
            "destination": "/tmp/" 
        },
        {
            "type": "shell",
            "script": "scripts/start_service.sh",
            "execute_command": "{{.Path}}"
        }
    ]
}